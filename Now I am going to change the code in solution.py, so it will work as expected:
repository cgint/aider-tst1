#! /usr/bin/env python3

import sys
from pathlib import Path
sys.path.append(str(Path(__file__).parent))

import click

@click.command()
@click.option('--input-dir', default='./data')
@click.option('--output-dir', default='./results')
def main(input_dir, output_dir):
    click.echo("Input directory: %s" % input_dir)
    click.echo("Output directory: %s" % output_dir)
