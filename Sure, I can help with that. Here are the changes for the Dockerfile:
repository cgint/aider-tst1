FROM python:3.11-slim
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get dist-upgrade -y && \
    apt-get autoremove -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
WORKDIR /app_root
COPY . .
RUN pip install --no-cache-dir -r requirements.txt
CMD ["python", "./solution.py"]
